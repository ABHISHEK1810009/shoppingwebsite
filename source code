    <!-- ---------Javascript for toggle menu------------- -->
    <script>
 
      function checkinfo() {
          console.log("welcome");
          var flag =0;
          var username_input = document.getElementById("user").value;
          var  password_input= document.getElementById("entered_password").value;
          var U_name = ["Abhishek", "Abhishek Kumar", "Aniket", "Amit", "rohit"];
          var U_pass = ["Abhishek@12", "AbhishekKumar@12", "Aniket@12", "Amit@12", "rohit@12"];
          var arrayLength = U_name.length;
          for (var i = 0; i <= arrayLength; i++) {
              if (username_input == U_name[i] && password_input == U_pass[i]) {
                  
                  flag=1;                 
                }               
             
          }    if(flag==1)
          {document.location.href = "cart.html";
    
          }    
          else{
              alert("wrong id or password");
          } 
    
      }  </script>
